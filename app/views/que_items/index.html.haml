%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          - @que_items.each do |que|  
            %tbody
              %tr
                %td
                  %input.form-control(type="text" value="1")
                %td
                  = link_to que.video_title, video_path(que.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = que.video_rating
                %td
                  = link_to que.category_name, category_path(que.video.category)
                %td
                  = link_to "", method: :post do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
