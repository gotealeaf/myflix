%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX"
  - if current_user
    %ul.col-md-4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path(current_user)

    = form_tag search_videos_path, class: "span5 for-search" do
      %input.search-query(name="title" type="text" placeholder="Search for videos here.")  
      %button.btn.btn-default(type="submit") Search

    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Wellcome #{User.find(session[:user_id]).full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Invite a friend", new_invitation_path
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign out", sign_out_path
