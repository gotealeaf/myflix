%section#top-header.row
  .container-fluid
    %h1.col-md-2
      = link_to "MyFLiX", :root
    - if logged_in?
      - if current_user.admin?
        %span= link_to "Videos", new_admin_video_path
      %span= link_to "My Queue", my_queue_path
      %span= link_to "People", people_path
      = form_tag search_videos_path, class: "col-md-5 navbar-form", method: 'get' do
        .form-group
          = text_field_tag('search_name', 'Search for videos here', class: 'form-control')
          = submit_tag("search", class: 'btn btn-default')
      #user_links.pull-right
        %ul
          %li.dropdown
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              = "Welcome, #{ current_user.full_name }"
              %b.caret
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
              %li
                %a(href="#") Account
                %a(href="#") Plan and Billing
                = link_to 'Sign out', sign_out_path
