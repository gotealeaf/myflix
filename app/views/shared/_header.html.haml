%section#top-header.row
  %h1.span2
    = link_to "MyFLiX"
  - if logged_in?
    %ul.span4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue"
      %li= link_to "People"
    =form_tag search_videos_path, :method => 'get' do
      .search_field
        = text_field_tag :search
        = submit_tag 'Search' , :name => nil, class: 'btn btn-default' , type: :submit
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome #{current_user.name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              %a(href="/sign_out") Sign Out