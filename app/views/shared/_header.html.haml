%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  -if signed_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    %form.col-md-5.navbar-form{action: search_videos_path, method: 'get'}
      .form-group
        %input.form-control(type="text" name="search" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            ="Welcome, #{current_user.name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              =link_to "Sign Out", signout_path
