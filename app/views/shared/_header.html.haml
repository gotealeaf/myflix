%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if signed_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos", root_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", following_people_path


    = form_tag "/search", method: 'get', class: 'col-md-5 navbar-form' do
      .form-group
        = text_field_tag 'search',nil, placeholder: "Search for videos here", class:'form-control'
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome,
            = @current_user.full_name
            %b.caret

          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Account", "#"
              = link_to "Plan and Billing", ''
              = link_to "Sign Out", signout_path
