<section class='genre'>
  <header class='clearfix'>
    <h1><%= @category.name %>
    <div class='genre_sorting'>
    </div>
  </header>
  <article class='row'>
    <% @category.videos.each do |video| %>
      <div class='video col-md-2'>
        <%= link_to image_tag(video.small_cover_url), video_path(video) %>
      </div>
    <% end %>
  </article>
</section>
