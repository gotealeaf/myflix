-cover_width = 166
-cover_height = 236

-@categories.each do |cat|
  %article.video_category
    %header
      %h3= link_to cat.name, category_path(cat)
    .videos.row
      - cat.recent_videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video), nil do
            %img{src: video.sm_cover_locn, width: "#{cover_width}", height: "#{cover_height}"}
