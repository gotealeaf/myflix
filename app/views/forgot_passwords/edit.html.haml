%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag update_forget_passwords_path(@user.password_token) ,class: 'form-group' do
        %header
          %h1 Reset Your Password
        .form-group
          = label_tag 'New Password'
          .row
            .col-sm-4
              =password_field_tag :password, nil, class: 'form-control' 
          = label_tag 'Confirm New Password'
          .row
            .col-sm-4
              =password_field_tag :password_confirmation, nil, class: 'form-control'
        .form-group.action
          = submit_tag 'Reset Password', class: "btn btn-default"