%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: invitations_path(@invitation), class: "invite" do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.text_field :friends_name, label: "Friend's Name"
            .row
              .col-sm-4
          .form-group
            = f.email_field :email, label: "Friend's Email Address"
            .row
              .col-sm-4
          .form-group
            .row
              .col-sm-6
                = f.text_area :message, label: "Invitation Message", rows: 6, placeholder: "Please join this really cool site!"
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")