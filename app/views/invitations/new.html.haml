-page_title("invite")

%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, class: 'invite' do |f| 
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset

          =# f.label :recipient_name, "Friend's Name"
          =f.text_field :recipient_name, label: "Friend's Name"

          =#f.label :recipient_email, "Friend's Email"
          =f.email_field :recipient_email, label: "Friend's Email"

          =#f.label :message
          =f.text_area :message, class: 'span4',  rows: 8, placeholder: 'Please join this really cool site!'

        %fieldset.form-group.action
          =f.submit value: "Send Invitation", class: "btn btn-default"
