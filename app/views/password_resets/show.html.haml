%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag password_resets_path, class: "sign_in" do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          %label New Password
          .row
            .col-sm-4
              %input.form-control(type="password" name="password")
          = hidden_field_tag "token", @user.token 
        %fieldset.form-group.action
          %input(type="submit" value="Reset Password" class="btn btn-default")
