%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, url: password_resets_path(params[:id])) do |f|
        %header
          %h1 Enter your new password
        %fieldset.form-group
          = hidden_field_tag 'reset_token', @user.reset_token
          = f.password_field :password
          = f.submit("Update Password")