%article.video_category
  %header
    %h3= link_to "TV Comedies"
  .videos.row
    - Video.all.each do |video|
      .video.col-sm-2
        = link_to video_path(video) do
          =image_tag(video.small_cover_url)

%article.video_category
  %header
    %h3= link_to "TV Dramas"
  .videos.row
    - 6.times do
      .video.col-sm-2
        %img(src="/tmp/#{['futurama', 'south_park', 'family_guy'].sample}.jpg")

