%article.video_category
  %header
    %h3
      = link_to "#{@comedy.name}", category_path(@comedy)
  .videos.row
    - @videos.limit(6).each do |a|
      .video.col-sm-2
        = link_to image_tag("#{a.small_cover}"), video_path(a)
          

