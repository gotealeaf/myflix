%article.video_category
  %header
    %h3
      = link_to "#{@comedy_category.name}", category_path(@comedy_category)
  .videos.row
    - @comedy.limit(6).each do |a|
      .video.col-sm-2
        = link_to image_tag("#{a.small_cover}"), video_path(a)
          

