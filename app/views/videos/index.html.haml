- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to category.name, category_path(category)
    .videos.row
      - if category.videos.empty?
        .col-xs-6.col-xs-offset-3.text-center
          .alert.alert-danger
            %p This category doesn't have any videos.
      - else
        - category.recent_videos.each do |video|
          .video.col-md-2
            = link_to video_path(video), nil do
              %img(src="#{video.small_cover_url}")