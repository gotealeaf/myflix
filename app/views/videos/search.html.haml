-cover_width = 166
-cover_height = 236

%section.genre
  %header.clearfix
    %h1= "Search Results for \"#{@searchtext}\""
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    -@results.each do |video|
      .video.col-md-2
        =link_to video_path(video), nil do
          %img{src: video.small_cover, width: "#{cover_width}", height: "#{cover_height}"}
