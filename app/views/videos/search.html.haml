%article.video_category
  .videos.row
    - catties = @categories.sort{|a,b| b.name <=> a.name}
    - catties.each do |catty|
      %div{:style => "align: left"}
        %h1
          = link_to catty.name, catty
        - cat_videos = @videos.select{|v| v.category_id == catty.id} 
        - cat_videos.each do |video|
          %div{:style => "height: 200px; display: inline"}
            -#.video.col-sm-2
            = link_to video, nil do
              %img(src="/tmp/#{video.small_cover_url}")

