- @categories.each do |cat|
  - if !cat.videos.empty?
    %article.video_category
      %header
        %h3= link_to cat.name, category_path(cat)
        .videos.row
          - cat.videos.each do |v|
            .video.col-sm-2
              = link_to image_tag("#{v.small_cover_url}", height: '236', width: '166'), video_path(v)