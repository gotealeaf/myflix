%article.video
  .container
    .row
      .video_large_cover.col-sm-6.col-sm-offset-1
        = image_tag("#{@video.large_cover}")
      .video_info.col-sm-3.col-md-push-2
        %header
          %h3 
            = @video.title
          %span 
            = @video.average_rating
        %p 
          = @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, @review] do |f|
        = f.select :rating, options_for_select([5.0,4.0,3.0,2.0,1.0])
        %label Write Review
        .row
          .col-sm-10.col-sm-offset-1
            = f.text_area :user_review, rows: 10, class: "span10"
            = f.submit
            = link_to "Cancel", @video
  %header
    %h3 
      User Reviews #{"#{@video.reviews.count}"}
  %ul
    - @video.recent_reviews.each do |vid|
      %article.review
        %li.row
          .col-sm-2
            %span 
              = "#{vid.rating}"
            %p 
              = "#{vid.user.full_name}"
          .col-sm-8
            %p 
              = "#{vid.user_review}"