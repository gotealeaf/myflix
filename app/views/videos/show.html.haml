%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img(src= "#{@video.source}")
      .video_info.span3
        %header
          %h3= @video.name
          %span Rating: #{@average_rating}/5.0
        %p= @video.description
%section.reviews.container
  .row
    .span10.offset1
      = form_for [@video, Review.new] do |f|
        %fieldset
          %label Rate this video
          = f.select :rating, options_for_select([5,4,3,2,1].map {|n| pluralize(n, "Star")}) 
          %label Write Review
          = f.text_area :description, rows: 6, class: "span6"
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
      - @reviews.each do |review|
        %article.review
          %li.row
            .span2
              %span Rating: #{review.rating} / 5
              %p by <a href=""> #{review.user.name} </a>
            .span8
              %p= review.description
