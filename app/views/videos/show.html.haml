%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img=image_tag(@video.large_url)
      .video_info.col-sm-3
        %header
          %h3=@video.title
          %span= "Rating: #{@video.average_review}"
        %p=@video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue
 
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      =form_for [@video, Review.new] do |f|
        %fieldset
          .form-group
            %label Rate this video
            .row
              .col-sm-3
                =f.select :rating, options_for_select([5,4,3,2,1].map {|number| [pluralize(number, "Star")]})
          .form-group
            %label Write Review
            .row
              .col-sm-8
                =f.text_area :content, rows: 6, class: "span6"
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
      %header
        %h3= "User Reviews (#{@video.reviews.count})"
      %ul
        - @video.reviews.order_by_created_at.each do |review|
          %br
          %article.review
            %li.row
              .col-sm-2
                %span= "Rating: #{review.rating} / 5"
                %p 
                  ="by #{review.user.name}"
              .col-sm-8
                %p= review.content
