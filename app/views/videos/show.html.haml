%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/monk_large.jpg")
      .video_info.col-sm-3
        %header
          %h3 
          = @video.title
          %span Rating: #{@avg_rating}/5.0
        %p
        = @video.description

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      -#%form
      = bootstrap_form_for(@review, html: {class: "form-horizonal"}) do |f|
        %fieldset
          .form-group
            %label Rate this video
            .row
              .col-sm-3
                %select.form-control(name="review[rating]")
                  %option(value="5") 5 Stars
                  %option(value="4") 4 Stars
                  %option(value="3") 3 Stars
                  %option(value="2") 2 Stars
                  %option(value="1") 1 Star
          .form-group
            %label Write Review
            .row
              .col-sm-8
                %textarea.form-control(name="review[description]" rows="6")
        %fieldset.form-group.actions.clearfix
          %input(type="hidden" name="review[video_id]" value="#{@video.id}")
          %input(type="hidden" name="review[user_id]" value="#{current_user.id}")

          %input(type="submit" value="Submit" class="btn")
          %a(href="") Cancel
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do|review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .col-sm-8
                %p #{review.description} 
