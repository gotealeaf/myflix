%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img{:src => @video.large_cover_path}
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: #{@rating}/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, @new_review] do |f|
        %fieldset
          .form-group
            %label Rate this video
            .row
              .col-sm-3
                = f.select :rating, [["5 Starts", 5], ["4 Starts", 4], ["3 Starts", 3], ["2 Starts", 2], ["1 Start", 1]], {}, class: "form-control"
          .form-group
            %label Write Review
            .row
              .col-sm-8
                = f.text_area :comment, class: "form-control", rows: "6"
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit", class: "btn"
          = link_to "Cancel", video_path(@video)
      %header
        %h3 User Reviews (#{@reviews.size})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                = content_tag :span, "Rating: #{review.rating} / 5"
                %p by <a href="">#{review.user.full_name}</a>
              .col-sm-8
                = content_tag :p, review.comment
