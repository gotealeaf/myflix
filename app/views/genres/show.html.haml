%section.genre
  %header.clearfix
    %h1= @genre.name.titleize
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @genre.videos.each do |video|
      .video.col-md-2
        = link_to video_path(video), nil do
          = image_tag "/assets/#{video.small_cover}"
