%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag reset_passwords_path do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          =hidden_field_tag :token, @user.token
          =label_tag :password, "New Password"
          =text_field_tag :password
          
        %fieldset.form-group.action
          = submit_tag "Reset Password", class: 'btn btn-warning'