%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user, url: { action: "update"} do |user|
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          = user.hidden_field :token, :value => user.token 
          .row
            .col-sm-4
              = user.password_field :password 
            .col-sm-4
              = user.password_field :password_confirmation 
        %fieldset.form-group.action
          = user.submit "Change password", class: "btn btn-default"
