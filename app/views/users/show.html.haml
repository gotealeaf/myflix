%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email.downcase)}?s=40")
          %h2 "#{current_user.full_name}'s video collections (#{current_user.count_queued_videos})"
          %button.btn.btn-default Follow
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            - current_user.queue_items.each do |queue_item|
              %tr
                %td
                  = link_to queue_item.video.title, video_path(queue_item.video)
                %td
                  = link_to queue_item.category_name, videos_path

%section.user_reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3 "#{current_user.full_name}'s Reviews (#{current_user.reviews.count})"
      %ul
        - current_user.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %p
                  = link_to "\"#{review.video.title}\"", video_path(review.video)
                %col Rating: #{review.rating} / 5
              .col-sm-8
                %p= review.content
