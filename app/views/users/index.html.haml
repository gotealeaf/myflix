%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @user_videos.each do |video|
              %tr
                %td
                  %input.form-control(type="text" value="1")
                %td
                  = link_to "#{video.title}"
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = link_to "#{@user_reviews.find(video.id).rating}"
                %td
                  = link_to "TV Shows"
                %td
                  = link_to "", method: :post do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
