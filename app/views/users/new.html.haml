%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: 'form-horizontal' } do |f|
        %header
          %h1 Register
        %fieldset
          .row
            = f.email_field :email, label: 'Email Address', wrapper: { class: 'col-sm-4' }
          .row
            = f.password_field :password, wrapper: { class: 'col-sm-4' }
          .row
            = f.text_field :full_name, label: 'Full Name', wrapper: { class: 'col-sm-4' }
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Sign Up" class="btn btn-default")
