%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Register
        %fieldset
          = hidden_field_tag('token', @user_token) 
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.password_field :password_confirmation
          = f.text_field :full_name, label: "Full name"
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key= #{ ENV["STRIPE_PUBLISHABLE_KEY"] } data-amount="990" data-name="MyFlix sign up charge." data-description="9.99 $ to sign up the best video service" data-currency="usd"> </script>