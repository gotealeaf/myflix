%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html:{ class: "form-horizontal"} do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          = hidden_field_tag :invitation_token, @invitation_token
          %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_t5LYwWz7eLuirPckbggoAZ6X" data-image="/square-image.png" data-name="Demo Site" data-description="2 widgets ($20.00)" data-amount="999")

          =f.submit
