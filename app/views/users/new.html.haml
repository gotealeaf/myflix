%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address"#, control_col: "col-sm-3", label_col: "col-sm-6"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          = f.submit "Create"