%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = form_tag "/update_queue", method: :patch do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each do |queue_item|
                %tr
                  %td
                    = text_field_tag(queue_item.id, queue_item.position, class: "form-control")
                  %td
                    = link_to queue_item.video_title, queue_item.video
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    = queue_item.rating
                  %td
                    = link_to queue_item.category_name, queue_item.category
                  %td
                    = link_to "", queue_item, method: :delete, class: "glyphicon glyphicon-remove"
          = submit_tag "Update Instant Queue", class: "btn btn-default"