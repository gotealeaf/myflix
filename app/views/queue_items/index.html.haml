%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
          =form_tag "/update_queue" do
            %table.table
              %thead
                %tr
                  %th(width="10%") List Order
                  %th(width="30%") Video Title
                  %th(width="10%") Play
                  %th(width="20%") Rating
                  %th(width="15%") Genre(s)
                  %th(width="15%") Remove
              %tbody
                - @queue_items.each do |queue_item|
                  %tr
                    %td
                      = hidden_field_tag "queue_items[][id]", queue_item.id
                      = text_field_tag "queue_items[][position]", queue_item.position, id: "position_for_video_id_#{queue_item.video_id}"
                      /%input.form-control(type="text" value="1")
                    %td
                      = link_to "#{queue_item.video_title}", video_path(queue_item.video)
                    %td
                      = button_to "Play", nil, class: "btn btn-default"
                    %td
                      = select_tag "queue_items[][rating]", options_for_select(rating_selector_options, rating_default_value(queue_item.rating)), include_blank: true, class: "form-control"
                    %td
                      - queue_item.video_categories.each do |category|
                        =link_to "#{category.name}",category_path(category)
                        %br
                    %td
                      = link_to queue_item_path(queue_item), method: 'delete' do
                        %i.glyphicon.glyphicon-remove

            = submit_tag "Update Instant Queue", class: "btn btn-default"
