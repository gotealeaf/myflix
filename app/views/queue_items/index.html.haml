-page_title("my queue")

%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        = form_tag update_queue_path do
          %header
            %h2 My Queue
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove

            %tbody
              - @queue_items.each_with_index do |queue_item, index| 
                =hidden_field_tag 'queue_items[][id]', queue_item.id
                %tr
                  %td
                    / two selecctors and xpath used in capybara tests for illustration
                    = text_field_tag 'queue_items[][position]', queue_item.position, id: "video_#{queue_item.video.id}", data: {video_id: queue_item.video.id}

                  

                  %td
                    = link_to queue_item.video_title, video_path(queue_item.video)
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
               
                    = select_tag 'queue_items[][rating]' , options_for_video_rating(queue_item.rating), include_blank: true, prompt: 'Rating'


                    =# queue_item.rating

                  %td
                    = link_to queue_item.category_name, category_path(queue_item.category)
                  %td
                    = link_to queue_item, method: :delete do
                      %i.glyphicon.glyphicon-remove
              
          = submit_tag "Update Instant Queue",  class: "btn btn-default"
