%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        - if @queue_items.empty?
          .alert.alert-info.text-center
            %h3 You do not have any items in your queue.
        - else
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each_with_index do |item, index|
                %tr
                  %td
                    %input.form-control(type="text" value="#{item.position}")
                  %td
                    = link_to item.video.title, video_path(item.video)
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    - if @ratings[index] == ""
                      Rate this item
                    - else
                      = pluralize(@ratings[index], 'Star')
                  %td
                    Fix categories
                  %td
                    = button_to "Play", nil, class: "btn btn-default"              
                  %td
                    = link_to "", method: :post do
                      %i.glyphicon.glyphicon-remove
          = button_to "Update Instant Queue", nil, class: "btn btn-default"