%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = form_tag queue_list_path do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="25%") Video Title
                %th(width="10%") Play
                %th(width="25%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each do |queue_item|
                %tr
                  = hidden_field_tag 'queue_items[][id]', queue_item.id
                  %td
                    = text_field_tag 'queue_items[][ranking]', queue_item.ranking, class: 'form-control btn-custom input-sm custom-width-list_order'
                  %td
                    = link_to queue_item.video_title, queue_item.video
                  %td
                    = button_to "Play", nil, class: "btn btn-default input-sm custom-padding"
                  %td
                    = select_tag 'queue_items[][rating]', options_for_select([0,5,4,3,2,1].map {|number| [number != 0 ? pluralize(number, "Star") : 'not yet rated', number]}, queue_item.rating), class: 'btn btn-default input-sm custom-width-rating'
                  %td
                    = link_to queue_item.category_name, queue_item.category
                  %td
                    = link_to video_queue_item_path(queue_item.video.id, queue_item.id), method: :delete do
                      %i.glyphicon.glyphicon-remove
          = submit_tag "Update Instant Queue", class: "btn btn-default"