%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |queue_item|
              %tr
                %td
                  = text_field_tag :ranking, queue_item.ranking, class: 'btn btn-default'
                %td
                  = link_to queue_item.video.title, queue_item.video
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = select_tag :rating, options_for_select([0,5,4,3,2,1].map {|number| [number != 0 ? pluralize(number, "Star") : 'not rated', number]}, queue_item.rating), class: 'btn btn-default'
                %td
                  = link_to queue_item.video.category.name, queue_item.video.category
                %td
                  = link_to video_queue_item_path(queue_item.video.id, queue_item.id), method: :delete do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
