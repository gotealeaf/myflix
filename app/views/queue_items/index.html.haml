=current_user.queue_items.first

%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            =current_user.full_name
            =current_user.id
            =Video.first.title
            =current_user.queue_items.first
            =QueueItem.first.position
            =@queue_items.first.user.full_name

            - @queue_items.each_with_index do |queue_item, index| 
              %tr
                %td
                  = index + 1
                  / %input.form-control(type="text" value="1")
                %td
                  = link_to queue_item.video_title, video_path(queue_item.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = queue_item.rating

                %td
                  = link_to queue_item.category_name, category_path(queue_item.category)
                %td
                  = link_to queue_item, method: :delete do
                    %i.glyphicon.glyphicon-remove
            
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
