%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do | qi |
              %tr
                %td= qi.position
                %td
                  = link_to("#{qi.video.title}", video_path(qi.video.id))
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  
                %td
                  = link_to("#{qi.video.category.title}", category_path(qi.video.category.id))
                %td
                  = link_to "", method: :post do
                    %i.glyphicon.glyphicon-remove
          = button_to "Update Instant Queue", nil, class: "btn btn-default"