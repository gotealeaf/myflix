%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag login_path, class: 'sign_in' do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag 'Email Address'
            .row
              .col-sm-4
                = email_field_tag :email, params[:email] || '', class: 'form-control'
          .form-group
            = label_tag 'Password'
            .row
              .col-sm-4
                = password_field_tag :password, '', class: 'form-control'
        %fieldset.form-group.action
          = submit_tag 'Sign in', class: 'btn btn-default'
