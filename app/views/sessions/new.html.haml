%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %fieldset
        = form_tag log_in_path do 
          .form-group
            .row
              .col-sm-4
                = label_tag(:email)
                = text_field_tag :email, params[:email] || '', class: "form-control"
          .form-group
            .row
              .col-sm-4
                = label_tag :password
                = password_field_tag :password, params[:password] || '', class: "form-control"
          %fieldset.form-group.action
            %input(type="submit" value="Sign in" class="btn btn-default")
            = link_to "Forgot Password", email_page_path, class: "btn btn-default"