%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in' do
        %header
          %h1 Sign in
        .form_group
          = label_tag :email, "Email Address", class: 'small_label'
          .row
            .col-sm-4
              = email_field_tag :email, "#{params[:email].to_s}", class: 'form-control'
        .form-group
          %br
          = label_tag :password
          .row
            .col-sm-4
              = password_field_tag :password, "#{params[:password].to_s}", class: 'form-control'
        .form-group.action
          %br
          %input(type="submit" value="Sign in" class="btn btn-default")
          .row
            .col-sm-4
              %br
              = link_to "Forgot your password?", forgot_password_path