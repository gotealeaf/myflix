%section.sign_in.container
  .row
    
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in form-horizontal' do 
        %header
          %h1 Sign In
        .row
          .col-sm-5
            %fieldset
      
              .form-group
                = label_tag :email, "Email Address"
                = email_field_tag :email, nil, class: 'form-control'

              
              .form-group
                = label_tag :password
                = password_field_tag :password, nil, class: 'form-control'
        .row
          %fieldset.action
            %input(type="submit" value="Sign in" class="btn btn-success")
            =link_to "Forgot Password", forgot_password_path, class: 'btn btn-default', id: "forgot_password", value: "forgot_pass"
