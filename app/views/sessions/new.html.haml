%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in form-horizontal' do
        %header
          %h1 Sign in
        %fieldset
          .form_group
            .row
              .col-sm-4.form_fix
                = label_tag :email, "Email Address"
                = email_field_tag :email
            .row
              .col-sm-4.form_fix
                = label_tag :password
                = password_field_tag :password
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-success fix_button")
