%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in form-horizontal' do
        %fieldset
          .row
            .form-group
              .col-sm-4
                = label_tag :email, "Email Address", class: 'small_label'
                = email_field_tag :email, "example@example.com", class: 'form-control'
          .row  
            .form-group
              .col-sm-4
                = label_tag :password
                = password_field_tag :password, nil, class: 'form-control'
        %br
        %fieldset
          .form-group
            .action
              %input(type="submit" value="Sign in" class="btn btn-default")
